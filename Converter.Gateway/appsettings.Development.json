{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "balancerRoute": {
        "ClusterId": "balancerCluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "balancerCluster": {
        "Destinations": {
          "balancerCluster/destination1": {
            "Address": "http://localhost:2000/"
          } //,
          //"balancerCluster/destination2": {
          //  "Address": "http://localhost:2001/"
          //}
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        },
        "SessionAffinity": {
          "Enabled": true,
          "AffinityKeyName": "Yarp.Session"
        }
      }
    }
  }
}
